<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>com.yourorg</groupId>
  <artifactId>attendance-app</artifactId>
  <version>1.1.0</version>
  <name>Attendance App</name>

  <properties>
    <maven.compiler.release>21</maven.compiler.release>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

    <javafx.version>21.0.5</javafx.version>
    <javafx.platform>win</javafx.platform>

    <main.class>util.Main</main.class>
    <ucanaccess.version>5.0.1</ucanaccess.version>
  </properties>

  <dependencies>
    <!-- JavaFX as platform-specific JARs (classpath) -->
    <dependency>
      <groupId>org.openjfx</groupId>
      <artifactId>javafx-controls</artifactId>
      <version>${javafx.version}</version>
      <classifier>${javafx.platform}</classifier>
    </dependency>
    <dependency>
      <groupId>org.openjfx</groupId>
      <artifactId>javafx-fxml</artifactId>
      <version>${javafx.version}</version>
      <classifier>${javafx.platform}</classifier>
    </dependency>

    <!-- UCanAccess -->
    <dependency>
      <groupId>net.sf.ucanaccess</groupId>
      <artifactId>ucanaccess</artifactId>
      <version>${ucanaccess.version}</version>
    </dependency>

    <!-- Apache POI -->
    <dependency>
      <groupId>org.apache.poi</groupId>
      <artifactId>poi-ooxml</artifactId>
      <version>5.2.5</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- Compile -->
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.11.0</version>
        <configuration>
          <release>${maven.compiler.release}</release>
        </configuration>
      </plugin>

      <!-- Dev run -->
      <plugin>
        <groupId>org.openjfx</groupId>
        <artifactId>javafx-maven-plugin</artifactId>
        <version>0.0.8</version>
        <configuration>
          <mainClass>${main.class}</mainClass>
        </configuration>
      </plugin>

      <!-- Fat JAR (classpath app) -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.6.0</version>
        <configuration>
          <descriptorRefs>
            <descriptorRef>jar-with-dependencies</descriptorRef>
          </descriptorRefs>
          <archive>
            <manifest>
              <mainClass>${main.class}</mainClass>
            </manifest>
          </archive>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase>
            <goals><goal>single</goal></goals>
          </execution>
        </executions>
      </plugin>

      <!-- jpackage (no JavaFX modules; classpath launch) -->
      <plugin>
        <groupId>org.panteleyev</groupId>
        <artifactId>jpackage-maven-plugin</artifactId>
        <version>1.7.1</version>
        <executions>
          <execution>
            <id>create-installer</id>
            <phase>package</phase>
            <goals><goal>jpackage</goal></goals>
            <configuration>
              <name>AttendanceApp</name>
              <appVersion>${project.version}</appVersion>
              <vendor>Your Company</vendor>

              <!-- Your fat JAR name is versioned -->
              <mainJar>${project.artifactId}-${project.version}-jar-with-dependencies.jar</mainJar>
              <mainClass>${main.class}</mainClass>

              <input>${project.build.directory}</input>
              <destination>${project.build.directory}/dist</destination>

              <type>MSI</type>

              <!-- JVM args helpful for JavaFX CSS reflection on classpath -->
              <jvmArgs>
                <jvmArg>--add-opens=javafx.graphics/com.sun.javafx.css=ALL-UNNAMED</jvmArg>
                <jvmArg>--add-opens=javafx.graphics/javafx.css=ALL-UNNAMED</jvmArg>
              </jvmArgs>

              <!-- include compiled resources as loose files if needed -->
              <resourceDir>${project.build.outputDirectory}</resourceDir>

              <!-- Windows options -->
              <winMenu>true</winMenu>
              <winShortcut>true</winShortcut>
              <winDirChooser>true</winDirChooser>
              <winConsole>false</winConsole>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>

    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>false</filtering>
      </resource>
    </resources>
  </build>

  <profiles>
    <profile>
      <id>win</id>
      <activation><os><family>Windows</family></os></activation>
      <properties><javafx.platform>win</javafx.platform></properties>
    </profile>
  </profiles>
</project>
